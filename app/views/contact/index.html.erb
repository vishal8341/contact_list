  <script>
    $(document).ready(function () {
      $('.num').click(function () {
        var num = $(this);
        var text = $.trim(num.find('.txt').clone().children().remove().end().text());
        var telNumber = $('.telNumber');
        $(telNumber).val(telNumber.val() + text);

        var filter = $("#filter").val(), count = 0;
        var contact_list = JSON.parse("<%= @contacts.to_json %>".replace(/&quot;/g,'"'));
        $("#no-count").text('');
        var matched_contacts = [];
        var list_contact = [];
        var contact_list_table = new Array();
        contact_list_table.push(["Name", "Contact No."]);
        $.each(contact_list, function( index, value ) {
          if ($(this)[0].number.search(new RegExp(filter, "i")) < 0) {
              $(this).fadeOut();
          } else {
              $(this).show();
              matched_contacts.push($(this)[0])
              count++;
          }
        });

        $.each(matched_contacts, function( index, value ) {
          contact_list_table.push([value.name, value.number])
        });
        var table = $("<table />");
        table[0].border = "1";

        //Get the count of columns.
        var columnCount = contact_list_table[0].length;

        //Add the header row.
        var row = $(table[0].insertRow(-1));
        for (var i = 0; i < columnCount; i++) {
            var headerCell = $("<th />");
            headerCell.html(contact_list_table[0][i]);
            row.append(headerCell);
        }

        //Add the data rows.
        for (var i = 1; i < contact_list_table.length; i++) {
            row = $(table[0].insertRow(-1));
            for (var j = 0; j < columnCount; j++) {
                var cell = $("<td />");
                cell.html(contact_list_table[i][j]);
                row.append(cell);
            }
        }

        var dvTable = $("#dvTable");
        dvTable.html("");
        dvTable.append(table);
        $( "table" ).addClass( "table table-striped" );

        // Update the count
        var numberItems = count;
        $("#filter-count").text("Number of Contacts = "+count);
        if(count < 1) {
          $("#no-count").text('No result');
        } else {
          $("#no-count").text('');
        }
      });


